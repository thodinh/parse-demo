extends layout

block content
    a.btn.btn-link(href='/category') Category
    span New Category
    hr
    form(method='post')
        div.form-group
            label Name
            input.form-control(placeholder='Category name', name='categoryName', value=categoryName)
        div.form-group
            label Description
            textarea.form-control(placeholder='Category name', name='categoryDescription') #{categoryDescription}
        div.form-group
            label Thumbnail
            input(type='file', name='categoryThumbnail')
        button.btn.btn-default.pull-right Create